{
  "build": { 
    "dockerfile": "Dockerfile",
    "args": {
        "ANO_CLAB_VERSION": "${localEnv:ANO_CLAB_VERSION}",
        "ANO_PRIV_KEY_NAME": "${localEnv:ANO_PRIV_KEY_NAME}"
    }
  },
  "hostRequirements": {
      "cpus": 4,
      "memory": "16gb",
      "storage": "32gb"
  },
  "workspaceMount": "source=${localWorkspaceFolder}/lab2_med,target=/workspace,type=bind",
  "workspaceFolder": "/workspace/tasks",
  "containerEnv": {
      "ANO_CLAB_VERSION": "${localEnv:ANO_CLAB_VERSION}",
      "ANO_PRIV_KEY_NAME": "${localEnv:ANO_PRIV_KEY_NAME}",
      "ANO_ARISTA_ROUTER_VERSION": "${localEnv:ANO_ARISTA_ROUTER_VERSION}"
  },
  "secrets": {
      "ANO_CLAB_VERSION": {
          "description": "containerlab version"
      },
      "ANO_PRIV_KEY_NAME": {
          "description": "private-key-name"
      }
  },
  "features": {
      "ghcr.io/devcontainers/features/github-cli:1": {},
      "ghcr.io/devcontainers/features/docker-in-docker:2": {},
      "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "customizations": {
      "codespaces": {
        "openFiles": [
          "task1.md"
        ]
      },
      "vscode": {
          "extensions": [
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // drawio and tldraw
                // excalidraw is pre-installed in universal
                "hediet.vscode-drawio",
                "tldraw-org.tldraw-vscode",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "mutantdino.resourcemonitor",
                "fabiospampinato.vscode-terminals",
                //"marp-team.marp-vscode",
                //Containerlab
                "srl-labs.vscode-containerlab",
                "marp-team.marp-vscode"
            ]
      }
  },
  "forwardPorts": [2222],
  "portsAttributes": {
    "2222": {
      "label": "FastAPI",
      "protocol": "http",
      "visibility": "public"
    }
  },
  "postCreateCommand": "/bin/postCreate.sh",
  "postStartCommand": ["containerlab", "deploy", "-t", "../lab2_med_arista.clab.yaml"]
}